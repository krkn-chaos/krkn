apiVersion: v1
kind: Pod
metadata:
  name: {{pod_name}}
  namespace: {{namespace}}
spec:
  {% if host_network %}
  hostNetwork: true
  {%endif%}
  hostPID: true
  nodeSelector:
    kubernetes.io/hostname: {{target}}
  containers:
  - name: {{container_name}}
    imagePullPolicy: Always
    image: {{workload_image}}
    securityContext:
      privileged: true
